{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "paths":{
      "@/*": ["src/*"],
    },
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "src",
    "test",
  ]
}